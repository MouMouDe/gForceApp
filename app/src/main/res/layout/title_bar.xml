<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:visibility="visible"
    android:orientation="horizontal"
    android:id="@+id/rl_title"
    android:gravity="center_vertical"
    android:background="@color/text_black" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/printRadius"
        android:paddingBottom="@dimen/printRadius"
        android:background="@color/text_black"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_centerVertical="true"
            android:background="@drawable/back"
            android:layout_marginLeft="@dimen/printWidth"
            android:layout_width="@dimen/btn_left_right_padding"
            android:layout_height="@dimen/tab_host_image" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tab_host_image"
            android:textStyle="bold" />


    </RelativeLayout>
</LinearLayout>